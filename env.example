# ============================================
# ENVIRONMENT VARIABLES TEMPLATE
# Copy this file to .env and fill in your values
# ============================================

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://workshop_user:workshop_password@localhost:5432/car_workshop"

# For production, use a secure connection:
# DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# ============================================
# APPLICATION
# ============================================
NODE_ENV="development"  # development | production | test
PORT=4000
FRONTEND_URL="http://localhost:3000"

# ============================================
# AUTHENTICATION
# ============================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"  # Token expiration

# NextAuth (for frontend)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-change-in-production"

# ============================================
# REDIS (Optional - for caching)
# ============================================
REDIS_URL="redis://localhost:6379"

# ============================================
# AI SERVICES
# ============================================

# OpenAI API Key (for ChatGPT, GPT-4, Whisper, DALL-E)
# Get it from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-..."

# Anthropic API Key (for Claude)
# Get it from: https://console.anthropic.com/
ANTHROPIC_API_KEY="sk-ant-..."

# ============================================
# COMMUNICATION SERVICES
# ============================================

# Twilio (for SMS and WhatsApp)
# Get credentials from: https://console.twilio.com/
TWILIO_ACCOUNT_SID="AC..."
TWILIO_AUTH_TOKEN="..."
TWILIO_PHONE_NUMBER="+1234567890"
TWILIO_WHATSAPP_NUMBER="whatsapp:+1234567890"

# SendGrid (for emails)
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY="SG..."
SENDGRID_FROM_EMAIL="noreply@yourworkshop.com"
SENDGRID_FROM_NAME="AutoFix Workshop"

# Alternative: Amazon SES
# AWS_ACCESS_KEY_ID="..."
# AWS_SECRET_ACCESS_KEY="..."
# AWS_REGION="us-east-1"
# AWS_SES_FROM_EMAIL="noreply@yourworkshop.com"

# ============================================
# FILE STORAGE
# ============================================

# Local storage (default)
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=5242880  # 5MB in bytes

# AWS S3 (optional - for production)
# AWS_S3_BUCKET="your-workshop-bucket"
# AWS_S3_REGION="us-east-1"
# AWS_S3_ACCESS_KEY="..."
# AWS_S3_SECRET_KEY="..."

# Cloudinary (alternative - easier than S3)
# CLOUDINARY_CLOUD_NAME="..."
# CLOUDINARY_API_KEY="..."
# CLOUDINARY_API_SECRET="..."

# ============================================
# PAYMENT PROCESSING (Optional)
# ============================================

# Stripe (for online payments)
# Get keys from: https://dashboard.stripe.com/apikeys
# STRIPE_PUBLIC_KEY="pk_test_..."
# STRIPE_SECRET_KEY="sk_test_..."
# STRIPE_WEBHOOK_SECRET="whsec_..."

# Square (alternative)
# SQUARE_ACCESS_TOKEN="..."
# SQUARE_LOCATION_ID="..."

# ============================================
# GOOGLE SERVICES (Optional)
# ============================================

# Google OAuth (for Google Sign-In)
# GOOGLE_CLIENT_ID="..."
# GOOGLE_CLIENT_SECRET="..."

# Google Maps API (for location features)
# GOOGLE_MAPS_API_KEY="..."

# Google Calendar API (for appointment sync)
# GOOGLE_CALENDAR_CLIENT_ID="..."
# GOOGLE_CALENDAR_CLIENT_SECRET="..."

# ============================================
# MONITORING & ANALYTICS (Optional)
# ============================================

# Sentry (error tracking)
# SENTRY_DSN="https://...@sentry.io/..."

# Google Analytics
# NEXT_PUBLIC_GA_TRACKING_ID="G-..."

# Mixpanel (user analytics)
# MIXPANEL_TOKEN="..."

# ============================================
# DEVELOPMENT TOOLS
# ============================================

# Prisma Studio
PRISMA_STUDIO_PORT=5555

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # max requests per window

# ============================================
# SECURITY
# ============================================

# CORS Allowed Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,https://yourworkshop.com"

# Session Secret
SESSION_SECRET="your-session-secret-change-in-production"

# ============================================
# FEATURE FLAGS
# ============================================

# Enable/disable features
FEATURE_AI_CHATBOT=true
FEATURE_SMS_NOTIFICATIONS=true
FEATURE_EMAIL_REMINDERS=true
FEATURE_ONLINE_BOOKING=true
FEATURE_PAYMENT_PROCESSING=false
FEATURE_MULTI_LOCATION=false

# ============================================
# BUSINESS SETTINGS
# ============================================

# Workshop Information
WORKSHOP_NAME="AutoFix Car Workshop"
WORKSHOP_PHONE="+1 (555) 123-4567"
WORKSHOP_EMAIL="contact@yourworkshop.com"
WORKSHOP_ADDRESS="123 Main Street, Your City, State 12345"

# Business Hours
BUSINESS_HOURS_START="08:00"
BUSINESS_HOURS_END="18:00"
BUSINESS_DAYS="1,2,3,4,5,6"  # 0=Sunday, 1=Monday, etc.

# Appointment Settings
APPOINTMENT_SLOT_DURATION=60  # minutes
APPOINTMENT_BUFFER_TIME=15    # minutes between appointments
APPOINTMENT_ADVANCE_BOOKING_DAYS=30  # how far in advance customers can book

# ============================================
# NOTIFICATIONS
# ============================================

# Reminder timing (hours before appointment)
REMINDER_HOURS_BEFORE=24

# Auto-send daily summary to managers
DAILY_SUMMARY_ENABLED=true
DAILY_SUMMARY_TIME="08:00"
DAILY_SUMMARY_RECIPIENTS="manager@yourworkshop.com"

# ============================================
# LOGGING
# ============================================

LOG_LEVEL="info"  # error | warn | info | debug
LOG_FILE="./logs/app.log"
LOG_MAX_SIZE="10m"
LOG_MAX_FILES=5

# ============================================
# PRODUCTION NOTES
# ============================================

# When deploying to production:
# 1. Change all secrets and passwords
# 2. Set NODE_ENV=production
# 3. Use strong JWT_SECRET and SESSION_SECRET
# 4. Enable SSL/HTTPS
# 5. Use production database URL
# 6. Set CORS_ORIGINS to your actual domain
# 7. Enable monitoring (Sentry, etc.)
# 8. Use production API keys (remove _test_ keys)
# 9. Set up proper backup strategy
# 10. Configure rate limiting appropriately

# ============================================
# QUICK START CHECKLIST
# ============================================

# Required for basic functionality:
# ✓ DATABASE_URL
# ✓ JWT_SECRET
# ✓ NEXTAUTH_SECRET

# Required for AI features:
# ✓ OPENAI_API_KEY (or ANTHROPIC_API_KEY)

# Required for notifications:
# ✓ TWILIO_ACCOUNT_SID + TWILIO_AUTH_TOKEN (for SMS)
# ✓ SENDGRID_API_KEY (for emails)

# Everything else is optional and can be added later!
